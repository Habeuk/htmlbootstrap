<section class="carouselcards-modele1">
	<div class="container sectionspace">
		{% if title %}
		<header class="header text-center d-flex justify-content-center align-items-center" >
				<span class="btn owl-prev d-flex justify-content-center align-items-center"><i class="fa fa-angle-left" aria-hidden="true"></i></span>
				<div class="content mx-5">
					<h2 class="section-title">{{ title }}</h2>
				    {% if txt_link %}<div class="see-all"><a href="{{ link }}">{{ txt_link }}</a></div>{% endif %}
				</div>
				<span class="btn owl-next d-flex justify-content-center align-items-center"><i class="fa fa-angle-right" aria-hidden="true"></i></span>
		</header>
		{% endif %}
		<div class="owl-carousel owl-theme" 
		data-carouselcardsmodele1='{"items":3,"margin":15,"loop":true,"center":true,"autoplay":true,"dots":false,"autoplayTimeout":70000,"smartSpeed":250,"nav":false,"dotsEach":true}' >
			{% for card in cards %}		
					<div class="card h-100">
							{% if card.link %}<a href="{{ card.link }}">{% endif %}
								<img class="card-img-top" src="{{ card.img.url }}" alt="card.img.alt">
							{% if card.link %}</a>{% endif %}
						
						<div class="card-body">
							{% if card.link %}<a href="{{ card.link }}">{% endif %}
								<h5 class="card-title">{{ card.title }}</h5>
							{% if card.link %}</a>{% endif %}
							<div class="card-text">
								<div class="text-right">{{ card.date }}</div>
							</div>
						</div>
					</div>			
			{% endfor %}
		</div>
	</div>
</section>